<%var title = 'Submit'%>

<link rel="stylesheet" type="text/css" href="./css/submit.css">
<script type="text/javascript" src="./js/submit.js"></script>

<main class="container justify-content-center" style="min-width: 80vw;">
    <!-- Ticket Submission widget -->
    <div class="card text-center align-item-center" style="margin-top: 5%; min-width: 80vw;">
        <form id="ticketForm">
            <div class="card-header">Create Ticket</div>
            <div class="card-body">
                <input class="text-input" type="text" name="headline" class="row" placeholder="Enter a headline" />
                <textarea name="description" class="text-input" rows="20" style="height: auto; margin-top: 5px;"
                    id="textArea" class="row" placeholder="Enter the description..." autofocus="autofocus"
                    required></textarea>
            </div>
            <div class="card-footer">
                <button id="btnSubmit" type="button" class="button btn-primary">Submit<span
                        class="fa fa-thumbs-o-up"></span></button>
            </div>
        </form>
    </div>

    <div id="spinner" class="visually-hidden justif-content-center" style="margin-top: 10px; margin-left: 50%;">
        <div class=" spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Ticket Info widget -->
    <%- include("partials/ticket_view.ejs", {"includeBtn": true}) %>

    <div class="push"></div>
</main>